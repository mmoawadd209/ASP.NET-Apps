@model IEnumerable<Vidly.Models.Movie>

<h2>Movies</h2>

@Html.ActionLink("New Movie","Create","Movies",new {@Class ="btn btn-primary" })
<br />

<table id="movies" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>movie</th>
        <th>Genre</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td> @Html.ActionLink(movie.Name, "Edit", new { id = movie.Id })</td>
            <td>@movie.Genre.Name</td>
            <td>
                <button data-movie-id="@movie.Id" class="btn-link js-delete">Delete</button>
            </td>
        </tr>
    }
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function() {
            $("#movies").on("click",
                ".js-delete",
                function() {
                    var movie = this;
                    bootbox.confirm("Are you sure you want to delete this movie ?", function(result) {

                        if (result) {
                            
                            $.ajax({
                                url:"/api/movies/"+ movie.getAttribute("data-movie-id"),
                                method:"DELETE",
                                success:function() {
                                    movie.closest("tr").remove();
                                }
                            }); 
                        }  
                    });
                                 
                });

        });




    </script>
}

