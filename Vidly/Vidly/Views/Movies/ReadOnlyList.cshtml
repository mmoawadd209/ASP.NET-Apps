@model IEnumerable<Vidly.Models.Movie>

<h2>Movies</h2>

<table id="movies" class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>movie</th>
        <th>Genre</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.Genre.Name</td>            
        </tr>
    }
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function() {
           $("#movies").DataTable();        
        });
    </script>
}

