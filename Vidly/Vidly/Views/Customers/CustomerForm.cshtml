@model Vidly.View_Models.CustomerFormViewModel
@{
    ViewBag.Title = "CustomerForm";
}
@if (Model.Customer.Id == 0)
{
    <h2>Create New Customer</h2>
}
@if (Model.Customer.Id != 0)
{
    <h2>Edit @Model.Customer.Name</h2>
}


@using (Html.BeginForm("Save", "Customers",FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(m=>m.Customer.Name)
        @Html.TextBoxFor(m=>m.Customer.Name,new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.TextBoxFor(m => m.Customer.BirthDate,"{0}:dd/mm/yyyy", new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m => m.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id","Name"),"Select Membership Type", new { @class = "form-control" })
    </div>
    <div class="checkbox">     
        @Html.CheckBoxFor(m => m.Customer.IsSubscribedToNewsLetter, new { @class = "form-control" }) Subscribed ?
    </div>

    @Html.HiddenFor(m=>m.Customer.Id)

    <button type="submit" class="btn btn-primary">Save</button>
}

