@model IEnumerable<Vidly.Models.Customer>

    @{
        ViewBag.Title = "Index";
    }

    <h2>Customers</h2>

    <table class="table table-bordered table-hover">
        <tr>
              <th>customer</th>
        </tr>

        @foreach (var customer in Model)
        {
            <tr>
                <td>@Html.ActionLink(customer.Name,"Details","Customers",new {id=customer.Id},null)</td>
            </tr>

        }

    </table>

